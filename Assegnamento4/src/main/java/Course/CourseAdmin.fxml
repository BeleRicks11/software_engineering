<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Course.CourseAdminController">
    <children>
        <SplitPane dividerPositions="0.3">
            <items>

                <!-- LEFT AnchorPane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="156.0">
                    <children>
                        <VBox alignment="CENTER" layoutX="13.0" layoutY="91.0" prefHeight="386.0" prefWidth="166.0">
                            <children>
                        <Label alignment="CENTER" contentDisplay="TOP" layoutX="45.0" layoutY="81.0" prefHeight="54.0" prefWidth="79.0" text="Select the User">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </Label>
                        <ComboBox fx:id="userComboBox" layoutX="13.0" layoutY="113.0" prefHeight="31.0" prefWidth="160.0" promptText="select" />
                        <Label alignment="CENTER" contentDisplay="TOP" layoutX="54.0" layoutY="31.0" prefHeight="38.0" prefWidth="108.0" text="Select the Course">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </Label>
                                <ComboBox fx:id="comboBox" prefHeight="31.0" prefWidth="160.0" promptText="select">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </ComboBox>
                                <Button fx:id="subscribeButton" mnemonicParsing="false" onAction="#subscribeMember" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #7cafc2; -fx-text-fill: #ffffff;" text="Subscribe">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="unsubscribeButton" mnemonicParsing="false" onAction="#unsubscribeMember" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #AB4642 #AB4642; -fx-text-fill: #ffffff;" text="Unsubscribe">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadSubscriptionData" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #3e904f; -fx-text-fill: #ffffff;" text="Reload Data">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="menuButton" mnemonicParsing="false" onAction="#backMenu" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #A9A9A9; -fx-text-fill: #ffffff;" text="Back to Menu">
                                    <VBox.margin>
                                        <Insets top="30.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                  <ImageView fitHeight="70.0" fitWidth="79.0" layoutX="57.0" layoutY="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/weight.png" />
                     </image>
                  </ImageView>

                    </children>
                </AnchorPane>

                <!--RIGHT AnchorPane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="486.0">
                    <children>

                        <!-- Add Toolbar -->
                        <ToolBar prefHeight="54.0" prefWidth="450.0" />
                        <HBox layoutX="-3.0" layoutY="40.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="458.0" prefWidth="459.0">
                            <children>

                                <!-- Add TableView -->
                                <TableView fx:id="subscriptionTable" editable="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="458.0" prefWidth="453.0">
                                    <columns>
                                        <!-- Add Columns -->
                                        <TableColumn fx:id="courseColumn" prefWidth="220.79999089241028" style="-fx-alignment: center;" text="Course Name" />
                                        <TableColumn fx:id="subscriptionColumn" prefWidth="235.19996643066406" style="-fx-alignment: center;" text="Subscribed" />
                                    </columns>
                                </TableView>
                            </children>
                        </HBox>

                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
