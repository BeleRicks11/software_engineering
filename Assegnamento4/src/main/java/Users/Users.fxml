<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Users.UsersController">
    <children>
        <SplitPane dividerPositions="0.3">
            <items>

                <!-- LEFT AnchorPane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="156.0">
                    <children>
                        <VBox alignment="CENTER" layoutX="13.0" layoutY="19.0" prefHeight="458.0" prefWidth="166.0">
                            <children>
                        <Label prefHeight="13.0" prefWidth="166.0" text="Form to Add or Update:">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Label>
                        <Label prefWidth="32.0" text="Name" />
                        <TextField fx:id="nameField" />
                        <Label text="Surname" />
                        <TextField fx:id="surnameField" />
                        <Label text="Username" />
                        <TextField fx:id="usernameField" />
                        <Label text="Password" />
                        <TextField fx:id="passwordField" />
                        <Label text="Select the User Type" />
                        <ComboBox fx:id="typeComboBox" layoutX="13.0" layoutY="269.0" prefHeight="31.0" prefWidth="160.0" promptText="select" />
                                <Label alignment="CENTER" contentDisplay="TOP" layoutX="45.0" layoutY="81.0" prefHeight="35.0" prefWidth="158.0" text="User to Update or Delete:">
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                </Label>
                                <ComboBox fx:id="userComboBox" layoutX="13.0" layoutY="113.0" prefHeight="31.0" prefWidth="160.0" promptText="select" />
                                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteUser" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #AB4642 #AB4642; -fx-text-fill: #ffffff;" text="Delete User">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addUser" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #7cafc2; -fx-text-fill: #ffffff;" text="Add User">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateUser" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #3e904f; -fx-text-fill: #ffffff;" text="Update User">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="menuButton" mnemonicParsing="false" onAction="#backMenu" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #A9A9A9; -fx-text-fill: #ffffff;" text="Back to Menu">
                                    <VBox.margin>
                                        <Insets top="30.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>

                    </children>
                </AnchorPane>

                <!--RIGHT AnchorPane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="486.0">
                    <children>

                        <!-- Add Toolbar -->
                        <ToolBar prefHeight="54.0" prefWidth="450.0" />
                        <HBox layoutX="-3.0" layoutY="40.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="458.0" prefWidth="459.0">
                            <children>

                                <!-- Add TableView -->
                                <TableView fx:id="usersTable" editable="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="458.0" prefWidth="453.0">
                                    <columns>
                                        <!-- Add Columns -->
                                        <TableColumn fx:id="nameColumn" prefWidth="92.79992985725403" style="-fx-alignment: center;" text="Name" />
                                        <TableColumn fx:id="surnameColumn" prefWidth="91.199951171875" style="-fx-alignment: center;" text="Surname" />
                              <TableColumn fx:id="usernameColumn" prefWidth="93.59996032714844" text="Username" />
                              <TableColumn fx:id="userTypeColumn" prefWidth="86.39993286132812" text="User Type" />
                              <TableColumn fx:id="passwordColumn" prefWidth="88.80001220703127" text="Password" />
                                    </columns>
                                </TableView>
                            </children>
                        </HBox>

                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
